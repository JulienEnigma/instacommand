# Social Commander Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Database Configuration
DATABASE_URL=sqlite:///app/data/social_commander.db

# Instagram Credentials (REQUIRED)
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# LLM Configuration
LLM_MODEL_NAME=microsoft/DialoGPT-medium
# Alternative models:
# LLM_MODEL_NAME=microsoft/DialoGPT-large
# LLM_MODEL_NAME=facebook/blenderbot-400M-distill

# Rate Limiting (seconds)
FOLLOW_DELAY=60
DM_DELAY=120
SCAN_DELAY=30
COMMENT_DELAY=90

# Playwright Configuration
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/tmp/social_commander.log

# RunPod Specific (for cloud deployment)
RUNPOD_POD_ID=
RUNPOD_API_KEY=

# Security (optional)
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
